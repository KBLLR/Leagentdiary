<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Le Agent Diary â€“ A Legendary Version Control for AI Agents</title>

  <!-- Tailwind -->
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      darkMode: 'class',
      theme: {
        extend: {
          fontFamily: {
            sans: ['Inter', 'sans-serif'],
          },
          colors: {
            background: {
              light: '#f9fafb',
              dark: '#0f172a',
            },
            surface: {
              light: '#ffffff',
              dark: '#1e293b',
            },
            border: {
              light: '#e2e8f0',
              dark: '#334155',
            },
            accent: '#818cf8',
          },
        },
      },
    };
  </script>

  <style>
    .timeline-line {
      position: absolute;
      left: 1.25rem;
      top: 1.5rem;
      bottom: 0;
      width: 2px;
      background-color: rgba(148, 163, 184, 0.25);
    }
    .collapsible-content {
      transition: max-height 0.5s ease, opacity 0.4s ease;
      max-height: 0;
      opacity: 0;
      overflow: hidden;
    }
    .collapsible-content.expanded {
      max-height: 1000px;
      opacity: 1;
    }
    .chevron-icon {
      transition: transform 0.3s ease;
    }
    .card-trigger.expanded .chevron-icon {
      transform: rotate(180deg);
    }
  </style>
</head>

<body class="bg-background-light dark:bg-background-dark text-gray-800 dark:text-gray-100 font-sans antialiased">
  <div class="container mx-auto max-w-4xl p-6">
    <header class="mb-12 text-center">
      <h1 class="text-4xl font-extrabold tracking-tight bg-gradient-to-r from-indigo-400 to-fuchsia-500 text-transparent bg-clip-text">
        Le Agent Diary
      </h1>
      <p class="text-lg text-gray-500 dark:text-gray-400 mt-2">
        A legendary version control for AI agents and their evolutions
      </p>
    </header>

    <div id="timeline-wrapper" class="relative"></div>
  </div>

  <script>
    const mockDeployments = [
      {
        id: "dpl_001",
        createdAt: "2025-11-09T18:00:00Z",
        git: {
          branch: "main",
          commitMessage: "feat: implement agent reflection workflow",
          commitAuthorName: "Jane Doe",
          commitAuthorAvatar: "https://placehold.co/40x40/6366f1/white?text=JD",
        },
        metadata: { target: "production" },
        links: {
          gitCommit: "#",
          deployment: "#",
        },
      },
      {
        id: "dpl_002",
        createdAt: "2025-11-08T15:00:00Z",
        git: {
          branch: "feat/ui-cleanup",
          commitMessage: "refactor: improve agent log readability",
          commitAuthorName: "Alex Smith",
          commitAuthorAvatar: "https://placehold.co/40x40/ec4899/white?text=AS",
        },
        metadata: { target: "preview" },
        links: {
          gitCommit: "#",
          deployment: "#",
        },
      },
      {
        id: "dpl_003",
        createdAt: "2025-11-07T20:30:00Z",
        git: {
          branch: "chore/docs",
          commitMessage: "docs: update handoff schema definitions",
          commitAuthorName: "Jane Doe",
          commitAuthorAvatar: "https://placehold.co/40x40/6366f1/white?text=JD",
        },
        metadata: { target: "production" },
        links: {
          gitCommit: "#",
          deployment: "#",
        },
      },
    ];

    function formatTimestamp(iso) {
      return new Date(iso).toLocaleString("en-US", {
        dateStyle: "medium",
        timeStyle: "short",
      });
    }

    function createBadge(target) {
      const map = {
        production: "bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-200",
        preview: "bg-indigo-100 text-indigo-800 dark:bg-indigo-900/40 dark:text-indigo-200",
      };
      return `<span class="inline-block text-xs font-medium px-2 py-0.5 rounded-full ${map[target]} capitalize">${target}</span>`;
    }

    function createTimelineCard(entry) {
      const { id, createdAt, git, metadata, links } = entry;

      const collapsibleHTML = `
        <div class="collapsible-content">
          <div class="p-4 border-t border-border-light dark:border-border-dark">
            <img src="https://placehold.co/800x450/f8fafc/94a3b8?text=Agentic+Preview" 
                 class="rounded-lg w-full mb-4" 
                 alt="Preview">
            <h4 class="text-lg font-semibold mb-2">Agentic Reflection</h4>
            <p class="text-sm text-gray-600 dark:text-gray-300 leading-relaxed">
              This deployment refined the documentation workflow and improved the reflection cadence
              between agents. It also introduced self-validation checkpoints for memory alignment.
            </p>
          </div>
          <div class="p-4 border-t border-border-light dark:border-border-dark flex justify-between items-center text-sm">
            <div class="flex items-center space-x-2">
              <img src="${git.commitAuthorAvatar}" class="h-6 w-6 rounded-full" alt="${git.commitAuthorName}">
              <span>${git.commitAuthorName}</span>
            </div>
            <div class="space-x-4">
              <a href="${links.gitCommit}" class="text-indigo-500 hover:underline">View Commit</a>
              <a href="${links.deployment}" class="text-green-500 hover:underline">Visit Site</a>
            </div>
          </div>
        </div>
      `;

      return `
        <div class="timeline-item relative pb-10">
          <div class="timeline-line"></div>
          <div class="absolute left-4 top-3.5 w-3 h-3 bg-indigo-400 rounded-full"></div>
          <div class="ml-10">
            <time class="text-xs text-gray-500 dark:text-gray-400">${formatTimestamp(createdAt)}</time>
            <div class="mt-2 bg-surface-light dark:bg-surface-dark border border-border-light dark:border-border-dark rounded-xl shadow-sm hover:shadow-md transition">
              <div class="card-trigger p-4 flex justify-between items-center cursor-pointer" data-toggle="card">
                <div>
                  <div class="flex items-center space-x-2 mb-1">
                    ${createBadge(metadata.target)}
                    <span class="text-xs font-medium text-gray-500 dark:text-gray-400">${git.branch}</span>
                  </div>
                  <p class="text-base font-semibold text-gray-900 dark:text-gray-100 truncate">${git.commitMessage}</p>
                </div>
                <svg class="chevron-icon w-4 h-4 text-gray-400" fill="none" stroke="currentColor" stroke-width="1.5"
                  viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
                </svg>
              </div>
              ${collapsibleHTML}
            </div>
          </div>
        </div>
      `;
    }

    function renderTimeline(data) {
      const wrapper = document.getElementById("timeline-wrapper");
      wrapper.innerHTML = data.map(createTimelineCard).join("");
    }

    function setupToggles() {
      document.getElementById("timeline-wrapper").addEventListener("click", (e) => {
        const trigger = e.target.closest("[data-toggle='card']");
        if (!trigger) return;
        const content = trigger.parentElement.querySelector(".collapsible-content");
        trigger.classList.toggle("expanded");
        content.classList.toggle("expanded");
      });
    }

    document.addEventListener("DOMContentLoaded", () => {
      renderTimeline(mockDeployments);
      setupToggles();
    });
  </script>
</body>
</html>
